<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BikesFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/poli_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="@color/colorPrimaryDark"
            android:minHeight="200dp"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <TextView
                android:id="@+id/poli_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/poli_count_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kornicka_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="@color/colorPrimaryDark"
            android:minHeight="200dp"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <TextView
                android:id="@+id/kornicka_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/kornicka_count_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_size" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>